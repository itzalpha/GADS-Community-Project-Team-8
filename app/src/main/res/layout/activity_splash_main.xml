<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".SplashMainActivity">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/retry_image"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_rotate"
        app:tint="@color/purple_700" />

    <TextView
        android:id="@+id/failed_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Failed \nRetry"
        android:textAlignment="center"
        android:visibility="gone"
        android:textAppearance="@style/CourseTitle"
        app:layout_constraintEnd_toEndOf="@+id/retry_image"
        app:layout_constraintStart_toStartOf="@+id/retry_image"
        app:layout_constraintTop_toBottomOf="@+id/retry_image" />


</androidx.constraintlayout.widget.ConstraintLayout>